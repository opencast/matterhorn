  <property name="osgi.remote.interfaces">*</property>
  <property name="osgi.remote.requires.intents">SOAP.1_2</property>
  <property name="osgi.remote.configuration.type">pojo</property>
  <property name="osgi.remote.configuration.pojo.httpservice.context">/samplews</property>
  <service>
    <provide interface="org.opencastproject.sampleservice.api.SampleService" />
  </service>
  <reference name="REPO" interface="org.opencastproject.repository.api.OpencastRepository"
    cardinality="1..1" policy="static" bind="setRepository" />
</component>
