<definition>
  <id>email-error</id>
  <description>Notifies the logs and via email that an error occurred</description>
  <operations>

    <!-- Sends an email -->
    <operation
	id="send-email"
	fail-on-error="true"
	exception-handler-workflow="error"
	description="Sends email">
      <configurations>
	<configuration key="to">ruben.perez@teltek.es</configuration>
	<configuration key="from">matterhorn@uvigo.es</configuration>
	<configuration key="host">smpt-saliente.uvigo.es</configuration>
	<configuration key="subject">Probando</configuration>
      </configurations>
    </operation>
    
    <!-- Cleanup the temporary files from the working file repository -->
    <operation
      id="cleanup"
      fail-on-error="true"
      exception-handler-workflow="error"
      description="Cleaning up">
      <configurations>
        <configuration key="preserve-flavors">*/source,dublincore/*</configuration>
      </configurations>
    </operation>

    <!-- Zip the mediapackage -->

    <operation
      id="zip"
      description="Cleaning up after failure">
      <configurations>
        <configuration key="zip-collection">failed.zips</configuration>
        <configuration key="include-flavors">*/source,dublincore/*</configuration>
        <configuration key="compression">false</configuration>
      </configurations>
    </operation>
  
  </operations>
  
</definition>