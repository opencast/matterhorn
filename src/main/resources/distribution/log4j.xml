<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <!-- FILE CONTAINS FILTER VARIABLES -->

    <!-- ############################################################ -->
    <!-- APPENDER                                                     -->
    <!-- ############################################################ -->

    <!-- Console -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.out"/>
        <param name="threshold" value="ALL"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{dd/MMM/yyyy:HH:mm:ss}] %p - %m%n"/>
        </layout>
    </appender>

    <!-- logs/replay.log -->
    <appender name="file.general" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/replay.log"/>
        <param name="MaxFileSize" value="1000KB"/>
        <param name="MaxBackupIndex" value="10"/>
        <param name="Encoding" value="UTF-8"/>
        <param name="Threshold" value="INFO"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{dd/MMM/yyyy:HH:mm:ss}] %p - %m%n"/>
        </layout>
    </appender>

    <!-- logs/replay/${log4j.logFileName} -->
    <appender name="file.app" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/replay/${log4j.logFileName}"/>
        <param name="MaxFileSize" value="1000KB"/>
        <param name="MaxBackupIndex" value="10"/>
        <param name="Encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{dd/MMM/yyyy:HH:mm:ss}] %p - %m%n"/>
        </layout>
    </appender>

    <!-- ############################################################ -->
    <!-- LOGGER                                                       -->
    <!-- ############################################################ -->

    <!-- general replay logger -->
    <logger name="ch.ethz" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="console"/>
        <appender-ref ref="file.general"/>
    </logger>

    <!-- replay app logger -->
    <logger name="${log4j.appLogger}" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="console"/>
        <appender-ref ref="file.app"/>
    </logger>

    <!-- Thirdparty libraries -->
    <logger name="org" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="console"/>
        <appender-ref ref="file.general"/>
    </logger>
    <logger name="org.springframework.web.servlet.tags.MessageTag" additivity="false">
        <level value="OFF"/>
    </logger>
    <logger name="net.fortuna.ical4j">
        <level value="WARN"/>
        <appender-ref ref="console"/>
        <appender-ref ref="file.general"/>
    </logger>


    <!-- Root logger (INFO) -->
    <root>
        <priority value="INFO"/>
        <appender-ref ref="console"/>
        <appender-ref ref="file.general"/>
    </root>
</log4j:configuration>