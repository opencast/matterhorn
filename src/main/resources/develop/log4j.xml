<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <!-- Console -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.out"/>
        <param name="threshold" value="ALL"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="conversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %p - %c - %m%n"/>
        </layout>
    </appender>

    <!-- Thirdparty libraries -->
    <logger name="org">
        <level value="ERROR"/>
        <appender-ref ref="console"/>
    </logger>
    <logger name="net.fortuna.ical4j">
        <level value="ERROR"/>
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.springframework.web.servlet.tags.MessageTag">
        <level value="OFF"/>
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.springframework.web.servlet.tags.form.ErrorsTag">
        <level value="OFF"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="ch.ethz.replay.core.common.job.JobTicketImpl">
        <level value="ERROR"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="ch.ethz.replay.core.common.bundle.builder">
        <level value="WARN"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="org.hibernate.transaction">
        <level value="WARN"/>
        <appender-ref ref="console"/>
    </logger>

    <!-- Root logger -->
    <root>
        <priority value="ALL"/>
        <appender-ref ref="console"/>
    </root>
</log4j:configuration>