  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.0.1</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName> ${project.artifactId} </Bundle-SymbolicName>
            <Export-Package>
              org.opencastproject.ingest.impl;version=${project.version},
              org.opencastproject.ingest.endpoint;version=${project.version},
              org.opencastproject.ingest.scanner;version=${project.version}
            </Export-Package>
            <Private-Package>
              META-INF.services;-split-package:=merge-first,
              de.schlichtherle.*;-split-package:=merge-first
            </Private-Package>
            <Private-Package>
              org.json.simple,
              org.json.simple.parser
            </Private-Package>
            <Embed-Dependency>
              json_simple;inline=true
            </Embed-Dependency>
            <Import-Package>
              org.opencastproject.http;version=${project.version},
              javax.persistence,
              *;resolution:=optional
            </Import-Package>
            <Service-Component>
              OSGI-INF/ingest-service-delegating.xml,
              OSGI-INF/ingest-service-local.xml,
              OSGI-INF/ingest-service-remote.xml,
              OSGI-INF/ingest-service-rest.xml,
              OSGI-INF/inbox-scanner.xml
            </Service-Component>
            <JPA-PersistenceUnits>
              org.opencastproject.ingest.endpoint
            </JPA-PersistenceUnits>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

