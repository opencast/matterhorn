<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  <!-- /stream web context -->
  <bean id="web.context.stream" class="org.red5.server.Context">
    <property name="scopeResolver" ref="red5.scopeResolver" />
    <property name="clientRegistry" ref="global.clientRegistry" />
    <property name="serviceInvoker" ref="global.serviceInvoker" />
    <property name="mappingStrategy" ref="global.mappingStrategy" />
  </bean>
  
  <bean id="web.scope.stream" class="org.red5.server.WebScope" init-method="register">
    <property name="server" ref="red5.server" />
    <property name="parent" ref="global.scope" />
    <property name="context" ref="web.context.stream" />
    <property name="handler" ref="web.handler.stream" />
    <property name="contextPath" value="/stream" />
    <property name="virtualHosts" value="*,localhost, localhost:8080, 127.0.0.1:8080" />
  </bean>
  
  <bean id="web.handler.stream" 
    class="org.opencastproject.stream.red5.Application" 
    singleton="true"
    init-method="init" />

  <bean id="demoService.service" class="org.opencastproject.stream.red5.DemoService" />
</beans>
