<?xml version="1.0" encoding="UTF-8"?>
<component name="org.opencastproject.conductor.impl.ConductorServiceImpl" immediate="true" activate="activate">
  <implementation class="org.opencastproject.conductor.impl.ConductorServiceImpl" />
  <property name="service.description" value="Conductor Service" />
  <service>
    <provide interface="org.opencastproject.conductor.api.ConductorService" />
    <provide interface="org.osgi.service.event.EventHandler" />
  </service>
  <property name="event.topics">
    org/opencastproject/ingest/INGEST_DONE
  </property>
  <reference cardinality="1..1" interface="org.opencastproject.workflow.api.WorkflowService" name="WorkflowService" 
  policy="static" bind="setWorkflowService" />
  <reference name="EVENT" interface="org.osgi.service.event.EventAdmin" 
  cardinality="0..1" policy="dynamic" bind="setEventAdmin" unbind="unsetEventAdmin" />
  <reference name="ConductorStrategy" interface="org.opencastproject.conductor.api.ConductorStrategy"  
  cardinality="0..1" policy="dynamic" bind="setConductorStrategy" unbind="unsetConductorStrategy"/>
</component>
