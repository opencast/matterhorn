<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencastproject.workflow.handler.VideoSegmenterWorkflowOperationHandler" immediate="true" activate="activate">
  <implementation class="org.opencastproject.workflow.handler.VideoSegmenterWorkflowOperationHandler" />
  <property name="service.description" value="Videosegmentation Workflow Operation Handler" />
  <property name="workflow.operation" value="segment" />
  <service>
    <provide interface="org.opencastproject.workflow.api.WorkflowOperationHandler" />
  </service>
  <reference cardinality="1..1" interface="org.opencastproject.analysis.api.MediaAnalysisService"
    name="VideoSegmenterService" policy="static" bind="setVideoSegmenter"
    target="(analysis.type=org.opencastproject.analysis.vsegmenter)"/>
  <reference cardinality="1..1" interface="org.opencastproject.workspace.api.Workspace"
    name="Workspace" policy="static" bind="setWorkspace"/>
  <reference name="trustedHttpClient" interface="org.opencastproject.security.api.TrustedHttpClient"
    cardinality="1..1" policy="static" bind="setTrustedHttpClient" />
</scr:component>
