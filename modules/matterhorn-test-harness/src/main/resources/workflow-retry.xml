<definition xmlns="http://workflow.opencastproject.org">

  <id>retry_integrationtest</id>
  <title>Test retry retry strategy</title>
  <description>
    A simple workflow that test the retry retry strategy.
  </description>
  <operations>
  
    <!-- Failing operation with retry as retry strategy -->
    <operation
      id="inspect"
      retry-strategy="retry"
      fail-on-error="true"
      description="Inspecting the media package">
    </operation>
    
  </operations>

</definition>
