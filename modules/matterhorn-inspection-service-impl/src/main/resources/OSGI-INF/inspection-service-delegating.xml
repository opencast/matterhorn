  <service>
    <provide interface="org.opencastproject.inspection.api.MediaInspectionService" />
  </service>
  <reference name="local"
    interface="org.opencastproject.inspection.impl.MediaInspectionServiceImpl"
    cardinality="1..1" policy="static" bind="setLocal" />
  <reference name="remote"
    interface="org.opencastproject.inspection.impl.MediaInspectionServiceRemoteImpl"
    cardinality="1..1" policy="static" bind="setRemote" />
</scr:component>
