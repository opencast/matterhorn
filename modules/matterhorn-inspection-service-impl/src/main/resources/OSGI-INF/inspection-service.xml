<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  name="org.opencastproject.inspection.impl.MediaInspectionServiceImpl"
  immediate="true" activate="activate">
  <implementation
    class="org.opencastproject.inspection.impl.MediaInspectionServiceImpl" />
  <property name="service.description" value="Media Inspection Service" />
  <service>
    <provide interface="org.opencastproject.inspection.api.MediaInspectionService" />
    <provide interface="org.osgi.service.cm.ManagedService" />
  </service>
  <reference name="workspace"
    interface="org.opencastproject.workspace.api.Workspace" cardinality="1..1"
    policy="static" bind="setWorkspace" />
  <reference name="receiptService"
    interface="org.opencastproject.remote.api.ReceiptService"
    cardinality="1..1" policy="static" bind="setReceiptService" />
</scr:component>