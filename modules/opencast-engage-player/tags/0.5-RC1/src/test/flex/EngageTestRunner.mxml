<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
				xmlns:flexunit="flexunit.flexui.*"
				xmlns:flexUnitUIRunner="http://www.adobe.com/2009/flexUnitUIRunner"
				creationComplete="onCreationComplete()">
	<mx:Script>
		<![CDATA[
			import org.opencast.engage.brick.videodisplay.suites.EngageVideoDisplayTestSuite;
			import org.opencast.engage.brick.videodisplay.cases.model.TestVideodisplayModel;

			import org.flexunit.listeners.UIListener;
			import org.flexunit.runner.FlexUnitCore;

			private var core:FlexUnitCore;

			private function onCreationComplete():void
			{
				this.core=new FlexUnitCore();
				core.addListener(new UIListener(uiListener));
				//core.run( EngageVideoDisplayTestSuite );
				core.run(TestVideodisplayModel);

			}
		]]>
	</mx:Script>
	<flexUnitUIRunner:TestRunnerBase id="uiListener"
									 width="100%"
									 height="100%"/>
</mx:Application>
