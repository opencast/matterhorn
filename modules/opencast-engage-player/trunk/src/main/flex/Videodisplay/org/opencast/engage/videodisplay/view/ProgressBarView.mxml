<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 width="400"
		 height="300"
		 creationComplete="{ onCreationComplete() }">

	<mx:Script>
		<![CDATA[
			import mx.controls.ProgressBarMode;
			import mx.controls.ProgressBar;
			import org.opencast.engage.videodisplay.model.VideodisplayModel;
			import org.swizframework.Swiz;

			[Autowire]
			[Bindable]
			public var model:VideodisplayModel;

			/**
			 * onCreationComplete
			 *
			 * Create and add a progress bar to the stage.
			 * */
			private function onCreationComplete():void
			{
				Swiz.autowire(this);
				model.progressBar=new ProgressBar();
				model.progressBar.labelPlacement='center';
				model.progressBar.percentWidth=100;
				model.progressBar.indeterminate=false;
				model.progressBar.setStyle("color", 0xFFFFFF);
				model.progressBar.setStyle("borderColor", 0x000000);
				model.progressBar.setStyle("barColor", 0x7B7EAE);
				model.progressBar.mode=ProgressBarMode.MANUAL;
				model.progressBar.label="";
				this.addChild(model.progressBar);
			}
		]]>
	</mx:Script>
</mx:VBox>
