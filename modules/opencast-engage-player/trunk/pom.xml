<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>EngageApp</groupId>
	<artifactId>opencast-engage-player</artifactId>
	<version>0.1-SNAPSHOT</version>
	<packaging>swf</packaging>
	<name>opencast-engage-player</name>

	<properties>
		<sourceFile>Videodisplay.mxml</sourceFile>
	</properties>

	<repositories>
		<repository>
			<id>opencast</id>
			<url>http://repository.opencastproject.org/nexus/content/groups/public</url>
		</repository>
		<repository>
			<id>flexmojos-repository</id>
			<url>http://repository.sonatype.org/content/groups/public/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>opencast</id>
			<url>http://repository.opencastproject.org/nexus/content/groups/public</url>
		</pluginRepository>
		<pluginRepository>
			<id>flexmojos-repository</id>
			<url>http://repository.sonatype.org/content/groups/public/</url>
		</pluginRepository>
	</pluginRepositories>

	<build>
		<sourceDirectory>src/main/flex/Videodisplay</sourceDirectory>
	<!--	<testSourceDirectory>src/test/flex</testSourceDirectory>-->
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<version>3.0.0</version>
				<extensions>true</extensions>
				<configuration>
					<targetPlayer>10.0.0</targetPlayer>
					<accessible>true</accessible>
					<headlessServer>true</headlessServer>
					<showWarnings>false</showWarnings>
				</configuration>
				<executions> 
                  <!--    <execution> 
							<phase>install</phase> 
                                <goals> 
                                  <goal>asdoc</goal>
                                </goals>
                                <configuration> 
                     			<mainTitle>Opencast-Matterhorn Videodisplay</mainTitle>
                  				<windowTitle>Opencast-Matterhorn Videodisplay</windowTitle>
                  				<output>docs/Opencast-Matterhorn Videodisplay</output>
                  				</configuration> 
                          </execution> -->
                </executions>
			</plugin>
			<plugin>
        <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-resources-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>install</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/target/hybrid-player</outputDirectory>
              <resources>          
                <resource>
                  <directory>src/main/html/html-release</directory>
                  <filtering>true</filtering>
                </resource>
                <resource>
                  <directory>src/main/resources</directory>
                  <filtering>true</filtering>
                </resource>
                <resource>
                  <directory>src/main/flex/Videodisplay</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>              
            </configuration>            
          </execution>
        </executions>
      </plugin>
		</plugins>
	</build>

	<dependencies>
	<!--	
			<dependency> <groupId>org.sonatype.flexmojos</groupId>
			<artifactId>flexmojos-unittest-support</artifactId>
			<version>3.3.0</version> <type>swc</type> <scope>test</scope>
			</dependency>
		-->
		<dependency>
			<groupId>com.adobe.flex.framework</groupId>
			<artifactId>flex-framework</artifactId>
			<version>3.3.0.4852</version>
			<type>pom</type>
			<exclusions>
				<exclusion>
					<groupId>com.adobe.flex.framework</groupId>
					<artifactId>playerglobal</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.adobe.flex.framework</groupId>
			<artifactId>playerglobal</artifactId>
			<version>3.3.0.4852</version>
			<classifier>10</classifier>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.adobe.osmf</groupId> 
			<artifactId>MediaFramework</artifactId> 
			<version>0.6</version> 
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.adobe.swiz</groupId> 
			<artifactId>swiz</artifactId> 
			<version>0.6.2</version> 
			<type>swc</type>
		</dependency>
	</dependencies>

</project>
