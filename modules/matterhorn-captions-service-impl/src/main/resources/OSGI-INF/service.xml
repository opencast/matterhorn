<?xml version="1.0" encoding="UTF-8"?>
<component name="org.opencastproject.captions.api.CaptionsService" immediate="true">
    <implementation class="org.opencastproject.captions.impl.CaptionsServiceImpl" />
    <property name="service.description"
        value="Captions Service - handles captionable lookup and attachment of caption data" />
    <property name="workflow.operation" value="captions" /><!-- must match constant in service impl -->
    <!-- service I use -->
    <reference name="workspace" interface="org.opencastproject.workspace.api.Workspace"
        cardinality="1..1" policy="static" bind="setWorkspace" unbind="unsetWorkspace" />
    <reference name="workflow" interface="org.opencastproject.workflow.api.WorkflowService"
        cardinality="1..1" policy="static" bind="setWorkflowService" unbind="unsetWorkflowService" />
    <reference name="http-service" interface="org.osgi.service.http.HttpService"
      cardinality="1..1" policy="static" bind="setHttpService" />
    <reference name="http-context" interface="org.osgi.service.http.HttpContext"
      cardinality="1..1" policy="static" bind="setHttpContext" />
    <!-- services I provide -->
    <service>
        <provide interface="org.opencastproject.captions.api.CaptionsService" />
        <provide interface="org.osgi.service.cm.ManagedService" /><!-- for dynamic settings -->
        <provide interface="org.opencastproject.workflow.api.WorkflowOperationHandler" />
    </service>
</component>
