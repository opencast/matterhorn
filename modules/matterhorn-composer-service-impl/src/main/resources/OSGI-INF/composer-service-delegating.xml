<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  name="org.opencastproject.composer.impl.ComposerServiceDelegatingImpl"
  immediate="true" activate="activate">
  <implementation
    class="org.opencastproject.composer.impl.ComposerServiceDelegatingImpl" />
  <property name="service.description" value="Composer (Encoder) Service" />
  <service>
    <provide interface="org.opencastproject.composer.api.ComposerService" />
  </service>
  <reference name="local"
    interface="org.opencastproject.composer.impl.ComposerServiceImpl"
    cardinality="1..1" policy="static" bind="setLocal" />
  <reference name="remote"
    interface="org.opencastproject.composer.impl.ComposerServiceRemoteImpl"
    cardinality="1..1" policy="static" bind="setRemote" />
</scr:component>
