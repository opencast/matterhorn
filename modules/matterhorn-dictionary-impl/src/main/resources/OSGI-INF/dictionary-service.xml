<?xml version="1.0" encoding="UTF-8"?>
<scr:component
  xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  name="org.opencastproject.dictionary.api.DictionaryService"
  immediate="true">
  <implementation 
    class="org.opencastproject.dictionary.impl.DictionaryServiceImpl" />
  <property name="service.description" value="Dictionary Service" />
  <service>
    <provide interface="org.opencastproject.dictionary.api.DictionaryService" />
  </service>
  <reference name="remoteServiceManager" interface="org.opencastproject.remote.api.RemoteServiceManager"
    cardinality="1..1" policy="static" bind="setRemoteServiceManager" />
  <reference name="trustedHttpClient" interface="org.opencastproject.security.api.TrustedHttpClient"
    cardinality="1..1" policy="static" bind="setTrustedHttpClient" />
  <reference name="workspace" interface="org.opencastproject.workspace.api.Workspace"
    cardinality="1..1" policy="static" bind="setWorkspace" />
</scr:component>
