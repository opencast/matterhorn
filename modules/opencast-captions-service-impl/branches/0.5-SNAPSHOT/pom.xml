<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.opencastproject</groupId>
  <artifactId>opencast-captions-service-impl</artifactId>
  <packaging>bundle</packaging>
  <version>0.5-SNAPSHOT2</version>
  <parent>
    <groupId>org.opencastproject</groupId>
    <artifactId>base</artifactId>
    <version>0.5-SNAPSHOT2</version>
  </parent>

  <!-- module specific stuff for the site -->
  <name>Opencast Captions Service</name>
  <developers>
    <developer>
      <id>azeckoski</id>
      <email>azeckoski@vt.edu</email>
      <name>Aaron Zeckoski</name>
      <timezone>0</timezone>
      <roles>
        <role>Architect</role>
        <role>Developer</role>
        <role>Documentation</role>
      </roles>
    </developer>
  </developers>
  <scm>
    <connection>scm:svn:http://source.opencastproject.org/svn/modules/opencast-captions-service-impl/trunk</connection>
    <developerConnection>scm:svn:https://source.opencastproject.org/svn/modules/opencast-captions-service-impl/trunk</developerConnection>
    <url>http://source.opencastproject.org/svn/modules/opencast-captions-service-impl/trunk</url>
  </scm>
  <!-- END site stuff -->

  <dependencies>
    <!-- matterhorn -->
    <dependency>
      <groupId>org.opencastproject</groupId>
      <artifactId>opencast-media</artifactId>
      <version>0.5-SNAPSHOT2</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.opencastproject</groupId>
      <artifactId>opencast-workspace-api</artifactId>
      <version>0.5-SNAPSHOT2</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.opencastproject</groupId>
      <artifactId>opencast-workflow-service-api</artifactId>
      <version>0.5-SNAPSHOT2</version>
      <scope>provided</scope>
    </dependency>
    <!-- needed for rest docs utils -->
    <dependency>
      <groupId>org.opencastproject</groupId>
      <artifactId>opencast-util</artifactId>
      <version>0.5-SNAPSHOT2</version>
      <scope>provided</scope>
    </dependency>

    <!-- internal -->
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <scope>provided</scope>
    </dependency>
    <!-- JSON encoding - http://code.google.com/p/json-simple/ -->
    <dependency>
      <groupId>com.googlecode.json-simple</groupId>
      <artifactId>json-simple</artifactId>
      <version>1.1</version>
    </dependency>

    <!-- specs -->
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.servicemix.specs</groupId>
      <artifactId>org.apache.servicemix.specs.jaxb-api-2.1</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax.ws.rs</groupId>
      <artifactId>jsr311-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-ws-metadata_2.0_spec</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.servicemix.specs</groupId>
      <artifactId>org.apache.servicemix.specs.jaxws-api-2.1</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_core</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_compendium</artifactId>
      <scope>provided</scope>
    </dependency>
    <!-- logging -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <!-- test -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>1.4.3</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
            <Export-Package>org.opencastproject.captions.api.*,org.opencastproject.captions.endpoint.*</Export-Package>
            <Private-Package>org.opencastproject.captions.impl.*</Private-Package>
            <Embed-Dependency>*;scope=compile|runtime;inline=true</Embed-Dependency>
            <Embed-Transitive>true</Embed-Transitive>
            <Service-Component>
              OSGI-INF/service.xml,
              OSGI-INF/service-rest.xml,
              OSGI-INF/service-soap.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
