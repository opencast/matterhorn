<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
  name="org.opencastproject.analysis.remote.MediaAnalysisRemoteImpl" immediate="true"  activate="activate">
  <implementation
    class="org.opencastproject.analysis.remote.MediaAnalysisRemoteImpl" />
  <property name="service.description" value="Media Analysis (VideoSegmenter) Remote Service Proxy" />
  <property name="analysis.type" value="video.segmenter" />
  <property name="resulting.flavor" value="mpeg-7/segments" />
  <property name="required.flavors"></property>
  <service>
    <provide interface="org.opencastproject.analysis.api.MediaAnalysisService" />
  </service>
  <reference name="trustedHttpClient" interface="org.opencastproject.security.api.TrustedHttpClient"
    cardinality="1..1" policy="static" bind="setTrustedHttpClient" />
  <reference name="receiptService" interface="org.opencastproject.remote.api.ReceiptService"
    cardinality="1..1" policy="static" bind="setReceiptService" />
</scr:component>
