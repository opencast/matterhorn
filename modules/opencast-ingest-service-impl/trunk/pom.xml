  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>1.4.3</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName> ${pom.artifactId} </Bundle-SymbolicName>
            <Export-Package> org.opencastproject.ingest.impl, org.opencastproject.ingest.endpoint </Export-Package>
            <Private-Package>
              META-INF.services;-split-package:=merge-first,
              de.schlichtherle.*;-split-package:=merge-first
            </Private-Package>
            <Private-Package>
              org.json.simple,
              org.json.simple.parser
            </Private-Package>
            <Embed-Dependency>
              json_simple;inline=true
            </Embed-Dependency>
            <Import-Package> org.opencastproject.http, *;resolution:=optional </Import-Package>
            <Service-Component>
              OSGI-INF/ingest-service.xml,
              OSGI-INF/ingest-service-rest.xml
            </Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
 
