<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencastproject.feedback.endpoint.FeedbackRestService"
	immediate="true" activate="activate" deactivate="deactivate">
	<implementation class="org.opencastproject.feedback.endpoint.FeedbackRestService" />
	<property name="service.description" value="Feedback REST Endpoint" />

  <property name="opencast.service.type" value="org.opencastproject.usertracking" />
  <property name="opencast.service.path" value="/feedback/rest" />

	<service>
		<provide interface="org.opencastproject.feedback.endpoint.FeedbackRestService" />
	</service>
	<reference name="service-impl"
		interface="org.opencastproject.feedback.api.FeedbackService"
		cardinality="1..1" policy="static" bind="setService" />
  <reference name="security-service" interface="org.opencastproject.security.api.SecurityService"
    cardinality="1..1" policy="static" bind="setSecurityService" />
</scr:component>
