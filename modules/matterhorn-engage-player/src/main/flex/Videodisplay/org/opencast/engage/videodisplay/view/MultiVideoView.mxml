<mx:Canvas 
    xmlns:mx = "http://www.adobe.com/2006/mxml"
    width = "100%"
    height = "100%"
    xmlns:view = "org.opencast.engage.videodisplay.view.*"
    >
    
    <mx:Script>
        <![CDATA[
        	import org.opencast.engage.videodisplay.state.VideoSizeState;
            import org.opencast.engage.videodisplay.model.VideodisplayModel;

            [Autowire]
            [Bindable]
            public var model:VideodisplayModel;
            
            
            public function setDivider( value:Number ):void
            {
            	divide.getDividerAt(0).x = ( divide.width - 5 ) * value;
            }
 
        ]]>
    </mx:Script>
    
    <mx:states>

        <mx:State 
            name = "bigleft"
              enterState="{setDivider(0.75)}"
            />
            
		<mx:State 
            name = "center"
            enterState="{setDivider(0.5)}"
            />
		
		<mx:State 
            name = "bigright"
            enterState="{setDivider(0.25)}"
            />

      	<mx:State 
            name = "custom"
            />
     </mx:states>

	<mx:HDividedBox 
		id="divide"
		width="100%" 
		height="100%"
		dividerRelease="{ model.videoSizeState = VideoSizeState.CUSTOM }"
		top="5"
		bottom="5"
		left="5"
		right="5"
		>

        <view:MultiVideoOneView 
        	width="100%"
        	height="100%"
        	/>
        
        <view:MultiVideoTwoView 
        	width="100%"
        	height="100%"
        	/>
    
    </mx:HDividedBox>
    
    <view:Splashscreen 
        id = "splashscreen"
        width = "100%"
        height = "100%"
        />
  
</mx:Canvas>
