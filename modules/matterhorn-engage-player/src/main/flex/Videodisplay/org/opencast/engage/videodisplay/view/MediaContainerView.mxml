<mx:Canvas 
    width = "100%"
    height = "100%"
    xmlns:players = "com.adobe.strobe.players.*"
    xmlns:mx = "http://www.adobe.com/2006/mxml"
    xmlns:view = "org.opencast.engage.videodisplay.view.*"
    resize = "{ resizeVideodisplay() }"
    xmlns:osmf="com.osmf.*"
    >

    <mx:Script>
        <![CDATA[
            import mx.controls.Alert;
            import mx.core.Container;
            import org.osmf.layout.ScaleMode;
            import org.osmf.containers.MediaContainer;
            import org.osmf.media.MediaPlayer;
            import org.swizframework.Swiz;
            import org.opencast.engage.videodisplay.control.event.ResizeVideodisplayEvent;
            import org.opencast.engage.videodisplay.model.VideodisplayModel;

            [Autowire]
            [Bindable]
            public var model:VideodisplayModel;

            /**
             * initPlayer
             *
             * Init the Videoplayer.
             *
             *  */
            public function initPlayer():void
            {
                // Set up the media player
                model.mediaPlayer = new MediaPlayer();
                model.mediaPlayer.autoRewind = true;
                model.mediaPlayer.autoPlay = true;
               
                // Set up the container
                model.mediaContainer = new MediaContainer();
                model.mediaContainer.layoutMetadata.scaleMode = ScaleMode.LETTERBOX;
                
                this.mediaContainerUIComponent.container = model.mediaContainer;
            }

            /**
             * resizeVideodisplay
             *
             * When the learner resize the Videodisplay in the Browser
             *
             * */
            public function resizeVideodisplay():void
            {
                Swiz.dispatchEvent( new ResizeVideodisplayEvent() );
            }
        ]]>
    </mx:Script>
   
     <osmf:MediaContainerUIComponent
        id = "mediaContainerUIComponent"
        width="100%"
        height="100%"
        addedToStage = "initPlayer()"
        />   
        
</mx:Canvas>
