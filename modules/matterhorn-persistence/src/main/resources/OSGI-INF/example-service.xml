<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
 name="org.opencastproject.persistence.Service" immediate="true" activate="activate" deactivate="deactivate">
  <implementation class="org.opencastproject.persistence.Service" />
  <property name="service.description" value="Persistence Example Service" />
  <property name="service.pid" value="org.opencastproject.persistence.Service" />  
  <service>
    <provide interface="org.opencastproject.persistence.Service" />
    <provide interface="org.osgi.service.cm.ManagedService" />
  </service>
  <reference name="persistence" interface="javax.persistence.spi.PersistenceProvider"
    cardinality="1..1" policy="static" bind="setPersistenceProvider" />
  <reference name="props" interface="java.util.Map"
    cardinality="1..1" policy="static" target="(type=persistence)" bind="setPersistenceProperties" />
</scr:component>
